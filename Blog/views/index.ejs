<%- include('partials/header.ejs'); %>
<%- include('partials/homenavbar.ejs'); %>
<body>
    <div class="container">
        <hr>
        <div class="jumbotron">
            <h1 class="display-4">Bem-vindo!</h1>
            <p class="lead">Este é um simples projeto acadêmico!</p>
            <hr class="my-4">
            <p>Este é um simples blog feito em Node.JS!</p>
            <a class="btn btn-primary btn-lg" href="#" role="button">Leia mais</a>
          </div>

        <% articles.forEach(article => { %>
            <br>
            <div class="card">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>
                <div class="card-body">
                    <a class="btn btn-success" href="/<%=article.slug%>">Ler artigo</a>
                </div>
            </div>
        <% }) %>
    </div>
</body>
